{
  "manifest_version": 3,
  "name": "Link Share",
  "version": "1.0",
  "description": "Share links via SMS from the browser",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab"],
  "host_permissions": ["http://localhost:5000/"]
}
